<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ZButton">
        <attr name="ZButton_progress" format="boolean"></attr>
        <!-- Text on center -->
        <attr name="ZButton_text_center" format="string"></attr>
        <attr name="ZButton_textcolor" format="color"></attr>
        <attr name="ZButton_textcolor_choose" format="color"></attr>
        <attr name="ZButton_textcolor_disable" format="color"></attr>
        <attr name="ZButton_textcolor_click" format="color"></attr>
        <!-- Textsize of text on center-->
        <attr name="ZButton_textsize" format="dimension"></attr>
        <!-- Text on left -->
        <attr name="ZButton_text_left" format="string"></attr>
        <attr name="ZButton_textsize_left" format="dimension"></attr>
        <attr name="ZButton_textcolor_left" format="color"></attr>
        <attr name="ZButton_textcolor_left_choose" format="color"></attr>
        <attr name="ZButton_textcolor_left_click" format="color"></attr>
        <attr name="ZButton_textcolor_left_disable" format="color"></attr>
        <!-- Text on right -->
        <attr name="ZButton_text_right" format="string"></attr>
        <attr name="ZButton_textsize_right" format="dimension"></attr>
        <attr name="ZButton_textcolor_right" format="color"></attr>
        <attr name="ZButton_textcolor_right_choose" format="color"></attr>
        <attr name="ZButton_textcolor_right_click" format="color"></attr>
        <attr name="ZButton_textcolor_right_disable" format="color"></attr>
        <!-- Small Text -->
        <attr name="ZButton_text_center_small" format="string"></attr>
        <attr name="ZButton_textsize_small" format="dimension"></attr>
        <attr name="ZButton_textcolor_small" format="color"></attr>
        <attr name="ZButton_textcolor_small_choose" format="color"></attr>
        <attr name="ZButton_textcolor_small_click" format="color"></attr>
        <attr name="ZButton_textcolor_small_disable" format="color"></attr>

        <!-- Width between text of center and small text-->
        <attr name="ZButton_w_space_text" format="dimension"></attr>
        <!-- Width between text of center and bitmap on center-->
        <attr name="ZButton_w_space" format="dimension"></attr>

        <!-- Percent of Bitmap on center -->
        <attr name="ZButton_percent_bitmap_center" format="float"></attr>
        <!-- Percent of Bitmap on left -->
        <attr name="ZButton_percent_bitmap_left" format="float"></attr>
        <!-- Percent of Bitmap on right -->
        <attr name="ZButton_percent_bitmap_right" format="float"></attr>
        <!-- Percent of Bitmap on back -->
        <attr name="ZButton_percent_back" format="float"></attr>

        <!--Orientation of text and bitmap-->
        <attr name="ZButton_orientation" format="string">horizontal|vertical</attr>
        <!--background orientation-->
        <attr name="ZButton_orientation_shader" format="string">

        </attr>
        <!--background color-->
        <attr name="ZButton_color_back" format="string"></attr>
        <attr name="ZButton_color_back_disable" format="string"></attr>
        <attr name="ZButton_color_back_choose" format="string"></attr>
        <attr name="ZButton_color_back_click" format="string"></attr>
        <!--border-->
        <attr name="ZButton_color_border_bitmap_center" format="color"></attr>
        <attr name="ZButton_color_border" format="color"></attr>
        <attr name="ZButton_color_border_choose" format="color"></attr>
        <attr name="ZButton_color_border_click" format="color"></attr>

        <!-- Bitmaps -->
        <attr name="ZButton_img_center" format="reference"></attr>
        <attr name="ZButton_img_center_choose" format="reference"></attr>
        <attr name="ZButton_img_center_disable" format="reference"></attr>
        <attr name="ZButton_img_center_click" format="reference"></attr>
        <attr name="ZButton_img_back" format="reference"></attr>
        <attr name="ZButton_img_back_choose" format="reference"></attr>
        <attr name="ZButton_img_back_disable" format="reference"></attr>
        <attr name="ZButton_img_back_click" format="reference"></attr>
        <attr name="ZButton_img_left" format="reference"></attr>
        <attr name="ZButton_img_right" format="reference"></attr>

        <!-- Gravity of bitmap on center -->
        <attr name="ZButton_gravity_img_center" format="string"></attr>

        <attr name="ZButton_style_img_back" format="string"></attr>

        <!-- Radius of all corners -->
        <attr name="ZButton_radius" format="dimension"></attr>

        <!-- Width of borders -->
        <attr name="ZButton_w_border" format="dimension"></attr>

        <!-- Borders of bitmap and text-->
        <attr name="ZButton_drawtextborder" format="boolean">false</attr>
        <attr name="ZButton_drawimgborder_center" format="boolean">false</attr>
        <attr name="ZButton_color_text_border" format="color"></attr>

        <!-- If you need draw a round shape bitmap-->
        <attr name="ZButton_drawcircleimg" format="boolean">false</attr>
        <attr name="ZButton_color_circle_border" format="color"></attr>

        <attr name="ZButton_isSpinner" format="boolean">false</attr>

        <!-- Corners -->
        <attr name="ZButton_radius_lefttop" format="dimension">0</attr>
        <attr name="ZButton_radius_righttop" format="dimension">0</attr>
        <attr name="ZButton_radius_leftbottom" format="dimension">0</attr>
        <attr name="ZButton_radius_rightbottom" format="dimension">0</attr>

        <!-- Is backgroundcolor autochange and state of button will changed at the moment-->
        <attr name="ZButton_isautochange" format="boolean">false</attr>

        <!--show wave-->
        <attr name="ZButton_wave" format="boolean">false</attr>
        <attr name="ZButton_wavecolor" format="color">#66ccff</attr>
        <attr name="ZButton_wavecolor_click" format="color">#66ccff</attr>
        <attr name="ZButton_wavecolor_choose" format="color">#66ccff</attr>
        <attr name="ZButton_wavecolor_disable" format="color">#66ccff</attr>
    </declare-styleable>
    <declare-styleable name="TabDigit">
        <attr name="digit_textSize" format="dimension" />
        <attr name="digit_padding" format="dimension" />
        <attr name="digit_cornerSize" format="dimension" />
        <attr name="digit_textColor" format="color" />
        <attr name="digit_backgroundColor" format="color" />
        <attr name="digit_reverseRotation" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ZScaleBar">
        <attr name="ZScaleBar_w_progress" format="dimension" />
        <attr name="ZScaleBar_roundradius" format="dimension" />
        <attr name="ZScaleBar_color" format="color" />
        <attr name="ZScaleBar_colorback" format="color" />
    </declare-styleable>
    <declare-styleable name="ZSwitchButton">
        <attr name="ZSwitchButton_w" format="dimension"></attr>
        <attr name="ZSwitchButton_h" format="dimension"></attr>
    </declare-styleable>
    <declare-styleable name="ZLoadingView">
        <attr name="ZLoadingView_loading_size" format="dimension" />
        <attr name="ZLoadingView_loading_color" format="color" />
        <attr name="ZLoadingView_loading_duration" format="integer"/>
    </declare-styleable>
</resources>
