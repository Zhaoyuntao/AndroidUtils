<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"

    android:orientation="horizontal"
    tools:context="com.androidutils.www.zandroidutils.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.zhaoyuntao.androidutils.component.ZButton
                android:id="@+id/zbutton1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="#00000000"
                app:ZButton_color_back="#992233"
                app:ZButton_color_back_choose="#000000"
                app:ZButton_color_back_click="#990033"
                app:ZButton_color_back_disable="#666666"
                app:ZButton_color_border="#22000000"
                app:ZButton_orientation="horizontal"
                app:ZButton_percent_bitmap_center="1.8"
                app:ZButton_radius="25dp"
                app:ZButton_textcolor="#ffffff"
                app:ZButton_textcolor_disable="#666666"
                app:ZButton_textsize="40sp"
                app:ZButton_textsize_small="20sp"
                app:ZButton_w_border="5dp"
                app:ZButton_w_space_text="10dp"
                app:ZButton_wave="false"
                app:ZButton_wavecolor="#005500" />

            <com.zhaoyuntao.androidutils.component.ZButton
                android:id="@+id/zb2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="#00000000"
                android:clickable="true"
                app:ZButton_color_back="#00574B"
                app:ZButton_color_back_choose="#000000"
                app:ZButton_color_back_click="#990033"
                app:ZButton_color_back_disable="#666666"
                app:ZButton_color_border="#002222"
                app:ZButton_color_border_click="#22002222"
                app:ZButton_orientation="horizontal"
                app:ZButton_percent_bitmap_center="1"
                app:ZButton_radius_leftbottom="60dp"
                app:ZButton_radius_lefttop="20dp"
                app:ZButton_radius_righttop="40dp"
                app:ZButton_text_center="hello"
                app:ZButton_textcolor="#ffffff"
                app:ZButton_textcolor_click="#00ff00"
                app:ZButton_textcolor_disable="#666666"
                app:ZButton_textsize="40sp"
                app:ZButton_textsize_small="20sp"
                app:ZButton_w_border="15dp"
                app:ZButton_w_space_text="10dp"
                app:ZButton_wave="false"
                app:ZButton_wavecolor="#005500" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.zhaoyuntao.androidutils.component.ZButton
                android:id="@+id/z1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:clickable="true"
                app:ZButton_color_back="#66ccff"
                app:ZButton_color_back_choose="#000000"
                app:ZButton_color_back_disable="#666666"
                app:ZButton_isautochange="true"
                app:ZButton_orientation="horizontal"
                app:ZButton_percent_bitmap_center="1"
                app:ZButton_radius="50dp"
                app:ZButton_text_center="hello"
                app:ZButton_textcolor="#ffffff"
                app:ZButton_textcolor_choose="#ffffff"
                app:ZButton_textcolor_disable="#666666"
                app:ZButton_textsize="40sp"
                app:ZButton_textsize_small="20sp"
                app:ZButton_w_space_text="10dp"
                app:ZButton_wave="false"
                app:ZButton_wavecolor="#005500" />

            <com.zhaoyuntao.androidutils.component.ZButton
                android:id="@+id/z2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:clickable="true"
                app:ZButton_color_back="#66ccff#ffffff"
                app:ZButton_color_back_choose="#000000"
                app:ZButton_color_back_click="#ffffff#66ccff"
                app:ZButton_color_back_disable="#666666"
                app:ZButton_color_border="#000000"
                app:ZButton_isautochange="true"
                app:ZButton_orientation="horizontal"
                app:ZButton_percent_bitmap_center="1"
                app:ZButton_radius="50dp"
                app:ZButton_text_center="hello"
                app:ZButton_textcolor="#ffffff"
                app:ZButton_textcolor_disable="#666666"
                app:ZButton_textsize="40sp"
                app:ZButton_textsize_small="20sp"
                app:ZButton_w_border="1px"
                app:ZButton_w_space_text="10dp"
                app:ZButton_wave="false"
                app:ZButton_wavecolor="#005500" />
        </LinearLayout>

        <com.zhaoyuntao.androidutils.component.ZButton
            android:id="@+id/center"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#00000000"
            app:ZButton_color_back="#59c18d"
            app:ZButton_color_back_choose="#000000"
            app:ZButton_color_back_click="#990033"
            app:ZButton_color_back_disable="#666666"
            app:ZButton_img_center="@drawable/settings"
            app:ZButton_orientation="horizontal"
            app:ZButton_percent_bitmap_center="1.5"
            app:ZButton_radius="50dp"
            app:ZButton_text_center="play sound"
            app:ZButton_text_center_small="setting"
            app:ZButton_textcolor="#ffffff"
            app:ZButton_textcolor_disable="#666666"
            app:ZButton_textcolor_small="#ffffff"
            app:ZButton_textsize="40sp"
            app:ZButton_textsize_small="20sp"
            app:ZButton_w_space_text="10dp"
            app:ZButton_wave="true"
            app:ZButton_wavecolor="#005500" />
        <com.zhaoyuntao.androidutils.component.ZButton
            android:id="@+id/center2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#00000000"
            app:ZButton_color_back="#59c18d"
            app:ZButton_color_back_choose="#000000"
            app:ZButton_color_back_click="#990033"
            app:ZButton_color_back_disable="#666666"
            app:ZButton_img_center="@drawable/settings"
            app:ZButton_orientation="horizontal"
            app:ZButton_percent_bitmap_center="1.5"
            app:ZButton_radius="50dp"
            app:ZButton_text_center="play music"
            app:ZButton_text_center_small="setting"
            app:ZButton_textcolor="#ffffff"
            app:ZButton_textcolor_disable="#666666"
            app:ZButton_textcolor_small="#ffffff"
            app:ZButton_textsize="40sp"
            app:ZButton_textsize_small="20sp"
            app:ZButton_w_space_text="10dp"
            app:ZButton_wave="true"
            app:ZButton_wavecolor="#005500" />
        <com.zhaoyuntao.androidutils.component.ZButton
            android:id="@+id/center3"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#00000000"
            app:ZButton_color_back="#59c18d"
            app:ZButton_color_back_choose="#000000"
            app:ZButton_color_back_click="#990033"
            app:ZButton_color_back_disable="#666666"
            app:ZButton_img_center="@drawable/settings"
            app:ZButton_orientation="horizontal"
            app:ZButton_percent_bitmap_center="1.5"
            app:ZButton_radius="50dp"
            app:ZButton_text_center="pause/resume music"
            app:ZButton_text_center_small="setting"
            app:ZButton_textcolor="#ffffff"
            app:ZButton_textcolor_disable="#666666"
            app:ZButton_textcolor_small="#ffffff"
            app:ZButton_textsize="40sp"
            app:ZButton_textsize_small="20sp"
            app:ZButton_w_space_text="10dp"
            app:ZButton_wave="true"
            app:ZButton_wavecolor="#005500" />


        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.zhaoyuntao.androidutils.component.ZScaleBar
                android:id="@+id/scalebar"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                app:ZScaleBar_color="#555500"
                app:ZScaleBar_roundradius="15dp"
                app:ZScaleBar_w_progress="30dp" />

            <TextView
                android:id="@+id/showprogress"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.zhaoyuntao.androidutils.component.ZScaleBar
                android:id="@+id/scalebar2"
                android:layout_width="200dp"
                android:layout_height="50dp"
                app:ZScaleBar_color="#c0883b"
                app:ZScaleBar_roundradius="5dp"
                app:ZScaleBar_w_progress="30dp" />

            <TextView
                android:id="@+id/showprogress2"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <com.zhaoyuntao.androidutils.component.ZSwitchButton
                android:id="@+id/switchbutton"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                app:ZSwitchButton_h="200dp"
                app:ZSwitchButton_w="80dp" />

            <com.zhaoyuntao.androidutils.component.ZSwitchButton

                android:id="@+id/switchbutton1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:ZSwitchButton_h="200dp"
                app:ZSwitchButton_w="80dp" />
        </LinearLayout>

<!--        <com.zhaoyuntao.androidutils.camera.CameraView-->
<!--            android:id="@+id/cameraview"-->
<!--            android:layout_width="200dp"-->
<!--            android:layout_height="70dp"-->
<!--            android:layout_gravity="center_horizontal" />-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <com.zhaoyuntao.androidutils.component.ZLoadingView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:ZLoadingView_loading_color="@color/red"
                app:ZLoadingView_loading_duration="700"
                app:ZLoadingView_loading_size="30dp"/>
        </FrameLayout>
    </LinearLayout>

</FrameLayout>
