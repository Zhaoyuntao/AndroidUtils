<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context="com.androidutils.www.zandroidutils.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/red">

                <com.zhaoyuntao.androidutils.camera.CameraView
                    android:id="@+id/camera"
                    app:radius="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#ff0000"
                android:layout_weight="1">
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:text="hello"
                    android:textColor="@color/red"
                    android:textSize="25sp" />
                />

                <Button
                    android:id="@+id/back"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:text="返回" />
            </FrameLayout>


            <com.zhaoyuntao.androidutils.component.ZButton
                android:id="@+id/zbutton1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#00000000"
                app:color_back="#992233"
                app:color_back_choose="#000000"
                app:color_back_click="#990033"
                app:color_back_disable="#666666"
                app:color_border="#22000000"
                app:img_center="@drawable/gotopoint"
                app:img_center_disable="@drawable/gotopoint_disable"
                app:orientation="horizontal"
                app:percent_bitmap_center="1"
                app:radius="25dp"
                app:text_center="xxx"
                app:text_center_small="small"
                app:text_left="left"
                app:text_right="right"
                app:textcolor="#ffffff"
                app:textcolor_disable="#666666"
                app:textsize="40sp"
                app:textsize_small="20sp"
                app:w_border="5dp"
                app:w_space="20dp"
                app:w_space_text="10dp"
                app:wave="false"

                app:wavecolor="#005500" />


            <com.zhaoyuntao.androidutils.component.ZScaleBar
                android:id="@+id/scalebar"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <com.zhaoyuntao.androidutils.component.ZSwitchButton
                android:id="@+id/switchbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:w="50dp"
                app:h="200dp"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <com.zhaoyuntao.androidutils.component.ZButton
        android:id="@+id/progress"
        app:progress="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>
